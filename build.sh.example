#Example build script for BGLibPy

#rm -rf build
mkdir build
cd build
cmake .. \
    -DMODLIBPATH=$HOME/src/bbp/lib/modlib \
    -DHOCLIBPATH=$HOME/src/bbp/lib/hoclib \
    -DNRNPATH=/usr/local/nrnnoiv \
    -DNRNPYTHONPATH=/usr/local/nrnnoiv/lib/python2.7/site-packages \
    -DBLUEPYPATH=$HOME/local/BluePy/lib/python2.7/site-packages \
    -DCMAKE_INSTALL_PREFIX=$HOME/local/bglibpy
make
make install
ctest -VV
