mkdir build
cd build
cmake .. \
    -DMODLIBPATH=$HOME/src/BlueBrain/lib/modlib \
    -DHOCLIBPATH=$HOME/src/BlueBrain/lib/hoclib \
    -DBBPQUANTAL=ON \
    -DBLUEPYPATH=$HOME/local/bluepy/lib/python2.6/site-packages \
    -DENABLE_DOC=ON \
    -DCMAKE_INSTALL_PREFIX=$HOME/local/quantal/bglibpy

make VERBOSE=1
make install
make doc
make doc_install
