}

Report soma
{
        Target Mosaic
        Type compartment
        ReportOn v
        Unit mV
        Format Bin
        Dt 0.1
        StartTime 0
        EndTime 20000
}

Connection excOverride
{
  Source Excitatory
  Destination Mosaic
  Weight 1.0
  SynapseConfigure %s.Use=1 %s.tau_r_AMPA=0.001 %s.NMDA_ratio=0.0
}

Connection inhOverride
{
  Source Inhibitory
  Destination Mosaic
  Weight 1.0
  SynapseConfigure %s.Use=1 %s.tau_r_GABAA=1.0 %s.GABAAB_ratio=0.0
}


Stimulus spikeReplay
{
