#!/bin/bash

set -e
set -x 

echo "###"
echo "### WARNING Make sure you rebuild/install BGLibPy before running theses tests !"
echo "###"
export PYTHONPATH=@PYTHON_PACKAGE_INSTALL_DIR@:${PYTHONPATH}

{ cd @CMAKE_CURRENT_BINARY_DIR@; nosetests -v -x -s; } && { cd @CMAKE_CURRENT_SOURCE_DIR@; nosetests -v -x -s --with-coverage --cover-xml --cover-xml-file=@CMAKE_CURRENT_BINARY_DIR@/coverage.xml --with-xunit --xunit-file=@CMAKE_CURRENT_BINARY_DIR@/xunit.xml ${@}; }
